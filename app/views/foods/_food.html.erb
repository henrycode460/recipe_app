<div id="<%= dom_id food %>" class="d-flex flex-row gap-4" >
  <div class="grid grid-rows-1 gap-2 grid-cols-3">
    <strong>Name:</strong>
    <%= food.name %>
  </div>

  <div class="grid grid-rows-1 gap-2 grid-cols-3">
    <strong>Measurement unit:</strong>
    <%= food.measurement_unit %>
  </div>

  <div class="grid grid-rows-1 gap-2 grid-cols-3">
    <strong>Price:</strong>
    <%= food.price %>
  </div>

  <div class="grid grid-rows-1 gap-2 grid-cols-3">
    <strong>Quantity:</strong>
    <%= food.quantity %>
  </div>

  <div class="grid grid-rows-1 gap-2 grid-cols-3">
    <strong>User:</strong>
    <%= food.user_id %>
  </div>

</div>
